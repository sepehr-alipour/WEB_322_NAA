<div class="row">

  <div class="col-md-12">
    <h2>Categories</h2>
    <hr />
    <p>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Category ID</th>
              <th>Category Name</th>
            </tr>
          </thead>
          <tbody>
            {{#each categories}}
              <tr>
                <td><a href="/posts?category={{id}}">{{id}}</a></td>
                <td><a href="/posts?category={{id}}">{{category}}</a></td>
              </tr>
            {{/each}}

          </tbody>
        </table>
      </div>
    </p>
  </div>
  {{#unless data.categories}}

  <div class="col-md-12 text-center">
    <strong>{{message}}</strong>
  </div>
  {{/unless }}
</div>